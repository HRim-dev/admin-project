<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hrimDev.signup.dao.SignUpMapper">

    <select id="countByUserId" resultType="int">
        SELECT COUNT(*)
        FROM USERS
        WHERE USER_ID = #{userId}
    </select>

    <insert id="signUpUserInfo" parameterType="SignUpDto">
        INSERT INTO USERS(
            USER_ID,
            PASSWORD,
            NAME,
            LOGIN_FAIL_COUNT,
            CREATED_AT
        )
        VALUES(
            #{userId},
            #{password},
            #{name},
            0
            NOW()
        );
    </insert>
</mapper>